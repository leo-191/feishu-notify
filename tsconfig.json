{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "./scripts",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}